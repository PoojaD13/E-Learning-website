<!DOCTYPE html>
<html>
<head>
    <title>Students</title>
    <style>
        body {
             font-family: sans-serif;
             padding: 20px;
             }
        table { 
            border-collapse: collapse;
             width: 100%;
             }
        td {
             border: 2px solid black; 
             padding: 8px; 
             text-align: left;
             font-size: 1.2em;
             }
        th{
            border: 2px solid black; 
             padding: 8px; 
             text-align: center; 
             color:blue;
             font-size: 1.9em;
        }
        button{
            background-color: red;
            color: white;
            border:none;
            font-size: 1.2em;
        }
        button:hover{
            background-color: brown;
            
        }
    </style>
</head>
<body>
    <h1>Student List</h1>
    <table>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Enrolled Courses</th>
            <th>Action</th>
        </tr>
        <% students.forEach(student => { %>
            <tr>
                <td><%= student.name %></td>
                <td><%= student.email %></td>
                <td>
                    <% student.enrolledCourses.forEach(course => { %>
                        <div><%= course.title %></div>
                    <% }) %>
                </td>
                
                 <td>
                    <form action="/student/delete-student" method="POST" onsubmit="return confirm('Are you sure you want to delete this student?');">
                        <input type="hidden" name="studentId" value="<%= student._id %>">
                        <button type="submit" class="delete-btn">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </table>
</body>
</html>
