<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= courseTitle %> Discussion Forum</title>
  <style>
    body { max-width: 700px; margin: 20px auto; font-family: Arial, sans-serif; }
    #discussion-list p { border-bottom: 1px solid #ddd; padding: 8px 0; }
    input, textarea, button { width: 100%; margin-top: 10px; padding: 8px; font-size: 1em; }
  </style>
</head>
<body>
  <h1>Discussion Forum: <%= courseTitle %></h1>

  <div id="discussion-list">Loading discussions...</div>

  <input type="text" id="discussion-user" placeholder="Your name (optional)" />
  <textarea id="discussion-message" placeholder="Write your message..." rows="4"></textarea>
  <button onclick="postDiscussion()">Post Comment</button>

  <script>
    const courseTitle = "<%= courseTitle %>";

    async function loadDiscussions() {
      const res = await fetch(`/courses/${encodeURIComponent(courseTitle)}/discussions`);
      const discussions = await res.json();
      const container = document.getElementById('discussion-list');
      if (!discussions.length) {
        container.innerHTML = '<p>No comments yet. Be the first!</p>';
        return;
      }
      container.innerHTML = discussions.map(d => `
        <p><strong>${d.user}</strong>: ${d.message} <small>(${new Date(d.createdAt).toLocaleString()})</small></p>
      `).join('');
    }

    async function postDiscussion() {
      const user = document.getElementById('discussion-user').value.trim();
      const message = document.getElementById('discussion-message').value.trim();
      if (!message) {
        alert('Please enter a message!');
        return;
      }
      const res = await fetch(`/courses/${encodeURIComponent(courseTitle)}/discussions`, {
        method: 'POST',
        headers: {'Content-Type': 'application/json'},
        body: JSON.stringify({ user, message }),
      });
      if (res.ok) {
        document.getElementById('discussion-message').value = '';
        loadDiscussions();
      } else {
        alert('Failed to post comment.');
      }
    }

    loadDiscussions();
  </script>
</body>
</html>
